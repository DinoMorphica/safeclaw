{
  "name": "safeclaw-monorepo",
  "private": true,
  "scripts": {
    "build": "pnpm build:shared && pnpm --filter safeclaw build",
    "build:shared": "pnpm --filter @safeclaw/shared build",
    "build:web": "pnpm --filter safeclaw build:web",
    "build:cli": "pnpm --filter safeclaw build:backend",
    "dev:web": "pnpm --filter safeclaw dev:web",
    "dev:cli": "pnpm --filter safeclaw dev",
    "clean": "pnpm -r exec rm -rf dist && pnpm -r exec rm -f tsconfig.tsbuildinfo && rm -rf apps/cli/public/*",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm --filter safeclaw test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,mjs,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml,css,html}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.56.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild"
    ]
  }
}

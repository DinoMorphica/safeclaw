{
  "name": "safeclaw",
  "version": "0.1.0",
  "description": "Security management dashboard for AI agents",
  "type": "module",
  "main": "./dist/main.js",
  "bin": {
    "safeclaw": "./bin/safeclaw.js"
  },
  "scripts": {
    "build:web": "pnpm --filter @safeclaw/web build && cp -r ../web/dist/* ./public/",
    "build": "tsc",
    "dev": "tsx watch src/main.ts start",
    "typecheck": "tsc --noEmit",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.0",
    "@fastify/static": "^8.0.0",
    "@safeclaw/shared": "workspace:*",
    "better-sqlite3": "^11.7.0",
    "commander": "^13.0.0",
    "drizzle-orm": "^0.38.0",
    "fastify": "^5.2.0",
    "open": "^10.1.0",
    "picocolors": "^1.1.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "socket.io": "^4.8.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^22.0.0",
    "@types/ws": "^8.18.1",
    "drizzle-kit": "^0.30.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  },
  "files": [
    "dist",
    "bin",
    "public"
  ]
}
